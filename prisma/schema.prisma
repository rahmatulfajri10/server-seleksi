generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tbl_role{
  id Int @id @default(autoincrement())
  kd_role Int @unique @default(autoincrement())
  ur_role String
  tbl_users tbl_user[]
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model tbl_user{
  id_user Int @id @default(autoincrement())
  username String @unique
  password String
  kd_role Int
  role tbl_role @relation(fields: [kd_role], references: [kd_role])
  tbl_nonparticipants tbl_nonparticipant[]
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model tbl_nonparticipant{
  id Int @id @default(autoincrement())
  username String
  username_nonparticipant tbl_user @relation(fields: [username], references: [username])
  nama String
  ket_jabatan String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}
